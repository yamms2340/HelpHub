    "test:watch": "jest --watch",
    "test:donations": "jest donations.test.js --verbose",
    "test:auth": "jest auth.test.js --verbose",
    "test:campaigns": "jest campaigns.test.js --verbose",
    "test:impact": "jest impactPosts.test.js --verbose",
    "test:all": "jest --runInBand --verbose",
    "test:leaderboard": "jest leaderboard.test.js --verbose",
    "test:help": "jest helpRequests.test.js --verbose --forceExit",
    "test:sequential": "npm run test:donations && npm run test:campaigns && npm run test:auth && npm run test:impact"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
